<script id="template-chat-message" type='x-tmpl-mustache'>
    <div class="direct-chat-msg {{typeOfChat}}">
        <div class="direct-chat-info clearfix">
            <span class="direct-chat-name {{classUserName}}">{{username}}</span>
            <span class="direct-chat-timestamp {{classCreated}}">{{created}}</span>
        </div>                
        <img 
            class="direct-chat-img" 
            src="{{userAvatar}}"
            alt="{{username}}">
        <div class="direct-chat-text">
            {{content}}
        </div>             
    </div>  
</script>

<script id="template-notify-error" type='x-tmpl-mustache'>
    <div class='alert alert-danger alert-dismissible' id="area-notification">
        <button type='button' class='close' data-dismiss='alert' aria-hidden='true'></button>
        <strong>Error: </strong>{{data.content}}
    </div>
</script>

<script id="template-user-typing" type='x-tmpl-mustache'>
    <p class='show-typing'>
        {{username}} is typing...
    </p>
</script>

<script id="template-user-online" type='x-tmpl-mustache'>
    <div class="user">
        <div class="col-md-8 col-sm-8 col-xs-8 user-avatar">
            <img 
                class="contacts-list-img" 
                src="uploads/users/{{avatar}}"
                alt="{{username}}">
            <h5>{{username}}</h5>
        </div>
        <div class="col-md-4 col-sm-4 col-xs-4">
            <button 
                data-username="{{username}}" 
                data-avatar="{{avatar}}"
                data-socketid="{{id}}"
                type="button" 
                class="add-friend btn btn-block btn-primary btn-w btn-sm">
                Add friend
            </button>
        </div>
    </div>  
</script>

<script id="template-user-online-requestSent" type='x-tmpl-mustache'>
    <div class="user">
        <div class="col-md-8 col-sm-8 col-xs-8 user-avatar">
            <img 
                class="contacts-list-img" 
                src="uploads/users/{{avatar}}"
                alt="{{username}}">
            <h5>{{username}}</h5>
        </div>
        <div class="col-md-4 col-sm-4 col-xs-4">
