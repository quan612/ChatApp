    </div>
</script>

<script id="template-message-notify" type='x-tmpl-mustache'>
    <a href={{privateChatLink}} data-name={{username}}>
        <div class="pull-left">
                     <!-- User Image -->
                     <img src="uploads/users/{{userAvatar}}" alt="${{username}}" class="img-circle">
                 </div>
                 <!-- Message title and timestamp -->
                 <h4> {{username}} 
                     <small><i class="fa fa-clock-o"></i>  {{created}}</small> 
                 </h4>
                 <!-- The message -->
                 <p>{{content}}</p>
    </a>
</script>