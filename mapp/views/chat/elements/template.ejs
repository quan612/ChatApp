<script id="template-invite-requests" type='x-tmpl-mustache'>
    <div 
        class="user-invite" 
        data-name="{{sender}}"
    >
        <div  class="col-md-7 col-sm-7 col-xs-7 user-avatar">
            <img class="contacts-list-img" src="uploads/users/{{senderAvatar}}" alt="{{sender}}">
            <h5>{{sender}}</h5>
        </div>
        <div class="col-md-5 col-sm-5 col-xs-5 btn-action-invite">
            <button 
                data-sender="{{sender}}" 
                data-senderavatar="{{senderAvatar}}" 
                type="button" 
                class="btn btn-block btn-primary control-add-friend-accept"
            >
                Accept
            </button>
            <button 
                data-sender="{{sender}}" 
                type="button" 
                class="btn btn-block btn-default control-add-friend-deny"
