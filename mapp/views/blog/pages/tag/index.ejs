<% include ./../../helpers/format-date %>
<% include ./../../helpers/format-summary %>
<%
    const folder_uploads = 'uploads/article/';
%>

<div class="col-lg-8 post-list">
    <!-- Start latest-post Area -->
    <div class="latest-post-wrap">
        <h4 class="cat-title"><%= tagName %></h4>       
        <% itemsInTag.forEach((item)=> { %>
            <div class="single-latest-post row align-items-center">
                <div class="col-lg-5 post-left">
                    <div class="feature-img relative">
                        <div class="overlay overlay-bg"></div>
                        <img class="img-fluid" src="<%= folder_uploads + item.thumb %>" alt="<%= item.name %>">
                    </div>
                </div>
                <div class="col-lg-7 post-right">
                    <a href="/article/<%= item.id %>">
                        <h4><%= item.name %></h4>
                    </a>
                    <ul class="meta">
                        <li>
                            <a href="#"><span class="lnr lnr-user"></span><%= item.created.user_name %></a>
                        </li>
                        <li>
                            <a href="#"><span class="lnr lnr-calendar-full"></span><%= formatDate(item.created.time) %> </a>
                        </li>
                    </ul>
                    <p class="excert"><%- formatSummary(item.content) %> ...</p>
                </div>
            </div>
        <% }) %>
    </div>
    <!-- End latest-post Area -->

    <% /*include view-list*/ %>
    <% /*include view-thumb*/ %>
</div>


